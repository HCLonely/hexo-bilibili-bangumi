<div class="bangumi-item">
    <div class="bangumi-picture"><img src="<%= loading || "https://cdn.jsdelivr.net/npm/hexo-bilibili-bangumi@1.2.0/lib/img/loading.gif" %>" data-src="<%= item.cover %>" referrerPolicy="no-referrer" width="110"/>
    </div>
    <div class="bangumi-info">
        <div class="bangumi-title">
            <a target="_blank" href="https://bgm.tv/subject/<%= item.id %>"><%= item.title || 'Unknown' %></a>
        </div>
        <div class="bangumi-meta">
            <span class="bangumi-info-items" <%- metaColor  %>>
                <span class="bangumi-info-item">
                <% if(item.totalCount){ %>
                <span class="bangumi-info-total"><%= item.totalCount %></span><em
                        class="bangumi-info-label-em">0</em>
                </span>
                <% } %>
                <% if(item.type){ %>
                <span class="bangumi-info-item bangumi-area">
                    <span class="bangumi-info-label">类型</span> <em><%= item.type || "-" %></em>
                </span>
                <% } %>
                <span class="bangumi-info-item bangumi-play">
                    <span class="bangumi-info-label">总人数</span> <em><%= item.view || "-" %></em>
                </span>
                <span class="bangumi-info-item bangumi-follow">
                    <span class="bangumi-info-label">想看人数</span> <em><%= item.wish || "-" %></em>
                </span>
                <span class="bangumi-info-item bangumi-coin">
                    <span class="bangumi-info-label">在看人数</span> <em><%= item.doing || "-" %></em>
                </span>
                <span class="bangumi-info-item bangumi-danmaku">
                    <span class="bangumi-info-label">看过人数</span> <em><%= item.collect || "-" %></em>
                </span>
                <span class="bangumi-info-item bangumi-info-item-score">
                    <span class="bangumi-info-label">评分</span> <em><%= item.score || "-" %></em>
                </span>
            </span>
        </div>
        <div class="bangumi-comments" <%- color %>><br/>简介：<%= item.des || "暂无简介" %> </div>
    </div>
</div>
